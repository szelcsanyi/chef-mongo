###
# Generated by Chef for [<%= node[:fqdn] %>]
# Environment: <%= node.chef_environment %>
###

#where to log
logpath= <%= @log %>

logappend=true

pidfilepath = <%= @pidfile %>

port = <%= @port %>
bind_ip = <%= Array(@bind_ip).join(',') %>

# Configuration Database
<% unless @configdb.nil? %>configdb = <%= @configdb -%>
<% else %># configdb not defined<% end %>

# Latency Treshold for Local Nodes
<% unless @localTreshold.nil? %>localTreshold = <%= @localTreshold -%>
<% else %># localTreshold not defined<% end %>

# Turn on/off security.  Off is currently the default
<% if @auth %>
auth = true
<% else %>
noauth = true
<% end %>

# Verbose logging output.
#verbose = true

# Turns off server-side scripting.  This will result in greatly limited
# functionality
#noscripting = true

# Unix socket
unixSocketPrefix = <%= @socket %>
